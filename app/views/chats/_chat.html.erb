


<% @chats.each do |chat| %>
  <%= link_to chat, class: "card-link" do %>

  <%username = ""%>
  <%if chat.user1_id == @current_user.id %>
    <div class="chat-card">
      <% username = User.find(chat.user2_id).username %>
    </div>
  <%else%>
      <% username = User.find(chat.user1_id).username %>
  <%end%>
  <div class="chat-card">
      <div><%=username%></div>
  </div>
<%end%>

<%end%>
