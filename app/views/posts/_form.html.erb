<style>
    input[type="submit"] {
        background-color: #007bff; 
        color: white;
        border: none; 
        border-radius: 5px; 
        padding: 8px 18px; 
        font-size: 16px;
    }
</style>

<%= form_with(model: Post.new, url: posts_path, method: :post) do |form| %>
    <div>
      <%= form.text_area :body, rows: 5, cols: 30 %>
    </div>
    <%= form.submit "Create Post" %>
<% end %>

<br>
<% if flash[:alert] %>
    <div style="background-color: #f8d7da; color: #721c24; padding: 10px; border: 1px solid #f5c6cb; border-radius: 4px; margin-bottom: 10px;">
        <strong>Alert:</strong> <%= flash[:alert] %>
    </div>
<% end %>
<br>