 <style>
 .logged-in {
        font-size: 18px;
    }
</style>
<div class="nav-bar">

  <p class="logged-in">Currently logged in as: <%= @current_user.username %></p>

  <%= link_to posts_path, class: "nav-item #{current_page?(posts_path) ? 'active' : ''}" do %>
    <i class="fas fa-newspaper"></i>
    <span>Posts</span>
  <% end %>
  
  <%= link_to chats_path, class: "nav-item #{current_page?(chats_path) ? 'active' : ''}" do %>
    <i class="fas fa-users"></i>
    <span>Chats</span>
  <% end %>

  <%= link_to meetings_path, class: "nav-item #{current_page?(meetings_path) ? 'active' : ''}" do %>
    <i class="fas fa-users"></i>
    <span>Meetings</span>
  <% end %>
  
  <%= link_to profile_path, class: "nav-item #{current_page?(profile_path) ? 'active' : ''}" do %>
    <i class="fas fa-user"></i>
    <span>Profile</span>
  <% end %>

  <%= link_to "Logout", logout_path, class: "button button-logout", 
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure you want logout?"
  } %>
</div>