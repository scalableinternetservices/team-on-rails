<div id="role-selector" class="role-selector">
  <h3 class="role-title">Select Your Role</h3>
  <div class="role-buttons">
    <%= button_to 'Student', 
        update_role_path(role: 'student'), 
        method: :patch,
        class: "role-button #{user.student? ? 'active' : ''}", 
        form_class: 'role-form' %>
        
    <%= button_to 'Instructor', 
        update_role_path(role: 'instructor'), 
        method: :patch,
        class: "role-button #{user.instructor? ? 'active' : ''}", 
        form_class: 'role-form' %>
  </div>
</div>